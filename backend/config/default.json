{
  "solr": "http://localhost:8982/solr",
  "solrCore": "ckan",
  "ckan": "http://localhost:5000",
  "sessionSecret": "secret",
  "frontend": "http://localhost:8080",
  "classicUi": "http://localhost:5000",

  "oidc": {
    "issuer": "https://{yourdomain}/oauth2/default",
    "authorizationURL": "https://{yourdomain}/oauth2/default/v1/authorize",
    "tokenURL": "https://{yourdomain}/oauth2/default/v1/token",
    "userInfoURL": "https://{yourdomain}/oauth2/default/v1/userinfo",
    "clientID": "{ClientID}",
    "clientSecret": "{ClientSecret}",
    "callbackURL": "http://localhost:3000/api/callback",
    "scope": "openid profile offline_access"
  },

  "snowplow": {
      "enabled": false,
      "collector": "snowPlowCollectorUrl",
      "protocol": "http",
      "port": 8080,
      "appId": "ckan"
  },

  "authGroupSeperator": "/",
  "sysAdminGroup": "admin"
